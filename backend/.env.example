# IndustryDB Backend Environment Variables
# For use with backend/docker-compose.yml (modular setup)

# ================================
# Database Configuration
# ================================
DATABASE_URL=postgres://industrydb:localdev@localhost:5544/industrydb?sslmode=disable
DB_HOST=localhost
DB_PORT=5544
DB_USER=industrydb
DB_PASSWORD=localdev
DB_NAME=industrydb

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://localhost:6677
REDIS_HOST=localhost
REDIS_PORT=6677
REDIS_PASSWORD=

# ================================
# API Configuration
# ================================
API_PORT=9988
API_HOST=0.0.0.0
API_ENVIRONMENT=development

# ================================
# JWT Configuration
# ================================
JWT_SECRET=dev-secret-change-in-production-please
JWT_EXPIRATION_HOURS=168

# ================================
# Frontend URL
# ================================
FRONTEND_URL=http://localhost:5566

# ================================
# CORS Configuration
# ================================
CORS_ALLOWED_ORIGINS=http://localhost:5566,http://localhost:9988

# ================================
# Rate Limiting
# ================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ================================
# Stripe Configuration
# ================================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=
STRIPE_PRICE_BUSINESS=

# ================================
# Logging
# ================================
LOG_LEVEL=debug
LOG_FORMAT=text

# ================================
# Storage
# ================================
STORAGE_LOCAL_PATH=./data/exports

# ================================
# Email Configuration
# ================================
EMAIL_FROM=noreply@industrydb.io
EMAIL_FROM_NAME=IndustryDB
# SENDGRID_API_KEY=
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=

# ================================
# Feature Flags
# ================================
FEATURE_API_ACCESS=false
FEATURE_SOCIAL_LOGIN=false
